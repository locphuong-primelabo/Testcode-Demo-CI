{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    // "paths": {
    //   "@/*": [
    //     "resources/*"
    //   ]
    // },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "resources/js/**/*"
    // "resources/**/*.ts",
    // "resources/**/*.tsx",
    // "resources/**/*.vue",
    // "tests/**/*.ts",
    // "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "vendor"
  ]
}
